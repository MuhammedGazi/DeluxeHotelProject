
@{
    ViewData["Title"] = "Index";
}

<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-white antialiased transition-colors duration-300">
    <div class="relative flex min-h-screen w-full flex-col overflow-hidden">
        <main class="flex-1 p-4 lg:p-6 xl:px-20 xl:py-8 space-y-6 overflow-y-auto no-scrollbar">
            @await Component.InvokeAsync("_DashboardFinansViewComponent")
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6">
                @await Component.InvokeAsync("_DashboardOilViewComponent")
                @await Component.InvokeAsync("_DashboardWeatherViewComponent")
                @await Component.InvokeAsync("_DashboardTaskViewComponent")
                @await Component.InvokeAsync("_DashboardMealViewComponent")
                @await Component.InvokeAsync("_DashboardFilmsViewComponent")
                @await Component.InvokeAsync("_DashboardRouteViewComponent")
            </div>
        </main>
    </div>

</body>

