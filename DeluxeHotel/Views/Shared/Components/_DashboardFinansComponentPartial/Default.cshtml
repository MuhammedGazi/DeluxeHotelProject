@using System.Globalization
@model ResultViewDto
@*
    _DashboardFinansViewComponent
*@
@{
    var btcPrice = decimal.Parse(Model.CoinDto.BTCToTry, CultureInfo.InvariantCulture);
    var ethPrice = decimal.Parse(Model.CoinDto.ETHToTry, CultureInfo.InvariantCulture);
    var bnbPrice = decimal.Parse(Model.CoinDto.BNBToTry, CultureInfo.InvariantCulture);
    var trCulture = new CultureInfo("tr-TR");
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4">
    
    <div class="glass-panel p-4 rounded-2xl flex flex-col justify-between h-28 hover:translate-y-[-2px] transition-transform duration-300 shadow-lg dark:shadow-none">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-slate-500 dark:text-[#92c9b2] text-[10px] font-bold uppercase tracking-wider">USD/TRY</p>
                <h3 class="text-xl font-bold mt-1">@Model.FinanceDto.UsdToTry.ToString("N2", trCulture) ₺</h3>
            </div>
            <div class="bg-green-500/10 text-green-500 rounded-lg px-1.5 py-0.5 text-[10px] font-bold flex items-center gap-1">
                <span class="material-symbols-outlined text-[12px]">trending_up</span> 0.4%
            </div>
        </div>
    </div>

    <div class="glass-panel p-4 rounded-2xl flex flex-col justify-between h-28 hover:translate-y-[-2px] transition-transform duration-300 shadow-lg dark:shadow-none">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-slate-500 dark:text-[#92c9b2] text-[10px] font-bold uppercase tracking-wider">EUR/TRY</p>
                <h3 class="text-xl font-bold mt-1">@Model.FinanceDto.EurToTry.ToString("N2", trCulture) ₺</h3>
            </div>
            <div class="bg-green-500/10 text-green-500 rounded-lg px-1.5 py-0.5 text-[10px] font-bold flex items-center gap-1">
                <span class="material-symbols-outlined text-[12px]">trending_up</span> 0.1%
            </div>
        </div>
    </div>

    <div class="glass-panel p-4 rounded-2xl flex flex-col justify-between h-28 hover:translate-y-[-2px] transition-transform duration-300 shadow-lg dark:shadow-none">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-slate-500 dark:text-[#92c9b2] text-[10px] font-bold uppercase tracking-wider">GBP/TRY</p>
                <h3 class="text-xl font-bold mt-1">@Model.FinanceDto.GbpToTry.ToString("N2", trCulture) ₺</h3>
            </div>
            <div class="bg-red-500/10 text-red-500 rounded-lg px-1.5 py-0.5 text-[10px] font-bold flex items-center gap-1">
                <span class="material-symbols-outlined text-[12px]">trending_down</span> -0.2%
            </div>
        </div>
    </div>

    <div class="glass-panel p-4 rounded-2xl flex flex-col justify-between h-28 border-l-4 border-l-orange-500 hover:translate-y-[-2px] transition-transform duration-300 shadow-lg dark:shadow-none">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-slate-500 dark:text-[#92c9b2] text-[10px] font-bold uppercase tracking-wider flex items-center gap-1">BTC <span class="text-orange-500">💰</span></p>
                <h3 class="text-lg font-bold mt-1">@btcPrice.ToString("N2", trCulture) $</h3>
            </div>
            <div class="bg-green-500/10 text-green-500 rounded-lg px-1.5 py-0.5 text-[10px] font-bold flex items-center gap-1">
                +2.5%
            </div>
        </div>
        <div class="w-full h-1 bg-slate-200 dark:bg-white/10 rounded-full overflow-hidden mt-auto">
            <div class="h-full bg-orange-500 w-[75%]"></div>
        </div>
    </div>

    <div class="glass-panel p-4 rounded-2xl flex flex-col justify-between h-28 border-l-4 border-l-purple-500 hover:translate-y-[-2px] transition-transform duration-300 shadow-lg dark:shadow-none">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-slate-500 dark:text-[#92c9b2] text-[10px] font-bold uppercase tracking-wider flex items-center gap-1">ETH <span class="text-purple-500">💎</span></p>
                <h3 class="text-lg font-bold mt-1">@ethPrice.ToString("N2", trCulture) $</h3>
            </div>
            <div class="bg-green-500/10 text-green-500 rounded-lg px-1.5 py-0.5 text-[10px] font-bold flex items-center gap-1">
                +1.8%
            </div>
        </div>
        <div class="w-full h-1 bg-slate-200 dark:bg-white/10 rounded-full overflow-hidden mt-auto">
            <div class="h-full bg-purple-500 w-[60%]"></div>
        </div>
    </div>

    <div class="glass-panel p-4 rounded-2xl flex flex-col justify-between h-28 border-l-4 border-l-yellow-400 hover:translate-y-[-2px] transition-transform duration-300 shadow-lg dark:shadow-none">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-slate-500 dark:text-[#92c9b2] text-[10px] font-bold uppercase tracking-wider flex items-center gap-1">BNB <span class="text-yellow-400">🔶</span></p>
                <h3 class="text-lg font-bold mt-1">@bnbPrice.ToString("N2", trCulture) $</h3>
            </div>
            <div class="bg-red-500/10 text-red-500 rounded-lg px-1.5 py-0.5 text-[10px] font-bold flex items-center gap-1">
                -0.5%
            </div>
        </div>
        <div class="w-full h-1 bg-slate-200 dark:bg-white/10 rounded-full overflow-hidden mt-auto">
            <div class="h-full bg-yellow-400 w-[45%]"></div>
        </div>
    </div>
</div>