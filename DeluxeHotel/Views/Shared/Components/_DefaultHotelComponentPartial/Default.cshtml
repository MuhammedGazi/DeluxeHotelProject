@model List<DeluxeHotel.DTOs.HotelDto.RequestHotelDto>
@*
    _DefaultHotelComponentPartial
*@
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ">
                <h2 class="mb-4">Önerilen Oteller</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm col-md-6 col-lg-4 ">
                    <div class="room">
                        <a href="#" class="img d-flex justify-content-center align-items-center"
                           style="background-image: url('@item.ImageUrl');">
                            <div class="icon d-flex justify-content-center align-items-center">
                                <span class="icon-search2"></span>
                            </div>
                        </a>
                        <div class="text p-3 text-center">
                            <h3 class="mb-3"><a href="#">@item.Name</a></h3>
                            <p>
                                <span class="price mr-2">@item.Price</span>
                                <span class="per">toplam tutar</span>
                            </p>
                            <div class="rating mb-3">
                                <span class="badge badge-primary" style="font-size: 1.1rem;">
                                    ⭐ @item.Rating
                                </span>
                            </div>
                            <hr>
                            <p class="pt-1">
                                <a href="/Default/HotelDetails/@item.HotelId?checkin=2026-06-10&checkout=2026-06-15" class="btn-custom">
                                    Otel Detaylarını Gör <span class="icon-long-arrow-right"></span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>