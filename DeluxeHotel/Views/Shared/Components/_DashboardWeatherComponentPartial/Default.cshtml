
@*
    _DashboardWeatherViewComponent
*@
<div class="glass-panel rounded-2xl p-0 relative overflow-hidden group col-span-1">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-400/20 to-blue-600/20 dark:from-blue-900/40 dark:to-[#162e25]"></div>
    <div class="relative p-5 h-full flex flex-col justify-between">
        <div class="flex justify-between items-start">
            <div>
                <h3 class="text-xl font-bold">Istanbul</h3>
                <p class="text-slate-500 dark:text-slate-300 text-xs">Turkey</p>
            </div>
            <span class="text-xs font-medium bg-white/20 backdrop-blur-sm px-2 py-0.5 rounded-full text-slate-800 dark:text-white border border-white/10">Now</span>
        </div>
        <div class="flex items-center justify-between mt-2">
            <div class="flex flex-col">
                <span class="text-4xl font-bold tracking-tighter">18°</span>
                <span class="text-slate-600 dark:text-primary font-medium text-xs mt-1">Partly Cloudy</span>
            </div>
            <div class="text-yellow-400 animate-pulse">
                <span class="material-symbols-outlined text-[60px]">partly_cloudy_day</span>
            </div>
        </div>
        <div class="grid grid-cols-3 gap-2 mt-4 pt-4 border-t border-slate-200 dark:border-white/10">
            <div class="text-center">
                <p class="text-[10px] text-slate-400 dark:text-[#92c9b2]">Hum</p>
                <p class="font-bold text-xs">62%</p>
            </div>
            <div class="text-center border-l border-r border-slate-200 dark:border-white/10">
                <p class="text-[10px] text-slate-400 dark:text-[#92c9b2]">Wind</p>
                <p class="font-bold text-xs">12k</p>
            </div>
            <div class="text-center">
                <p class="text-[10px] text-slate-400 dark:text-[#92c9b2]">UV</p>
                <p class="font-bold text-xs">Mod</p>
            </div>
        </div>
    </div>
</div>