@model ResultWeatherDto
@*
    _DashboardWeatherViewComponent
*@
<div class="glass-panel rounded-2xl p-0 relative overflow-hidden group col-span-1">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-400/20 to-blue-600/20 dark:from-blue-900/40 dark:to-[#162e25]"></div>
    <div class="relative p-5 h-full flex flex-col justify-between">
        
        <div class="flex justify-between items-start">
            <div>
                <h3 class="text-xl font-bold">@Model.City</h3>
                <p class="text-slate-500 dark:text-slate-300 text-xs">@Model.Country</p>
            </div>
            <span class="text-xs font-medium bg-white/20 backdrop-blur-sm px-2 py-0.5 rounded-full text-slate-800 dark:text-white border border-white/10">Şu an</span>
        </div>

        <div class="flex items-center justify-between mt-2">
            <div class="flex flex-col">
                <span class="text-4xl font-bold tracking-tighter">@Model.Temp°</span>
                <span class="text-slate-600 dark:text-primary font-medium text-xs mt-1 capitalize">
                    @Model.Description
                </span>
            </div>
            
            <div class="text-yellow-400">
                @if (!string.IsNullOrEmpty(Model.Icon))
                {
                    <img src="https://openweathermap.org/img/wn/@(Model.Icon).png"
                         alt="@Model.Description" 
                         class="w-[60px] h-[60px] drop-shadow-lg" />
                }
                else
                {
                    <span class="material-symbols-outlined text-[60px]">partly_cloudy_day</span>
                }
            </div>
        </div>

        <div class="grid grid-cols-3 gap-2 mt-4 pt-4 border-t border-slate-200 dark:border-white/10">
            <div class="text-center">
                <p class="text-[10px] text-slate-400 dark:text-[#92c9b2]">Nem</p>
                <p class="font-bold text-xs">%@Model.Humidity</p>
            </div>
            <div class="text-center border-l border-r border-slate-200 dark:border-white/10">
                <p class="text-[10px] text-slate-400 dark:text-[#92c9b2]">Rüzgar</p>
                <p class="font-bold text-xs">@Model.WindSpeed km/h</p>
            </div>
            <div class="text-center">
                <p class="text-[10px] text-slate-400 dark:text-[#92c9b2]">UV</p>
                <p class="font-bold text-xs">@Model.UvIndex</p>
            </div>
        </div>
    </div>
</div>