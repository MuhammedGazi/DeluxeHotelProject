
@*
    _DashboardTaskViewComponent
*@
<div class="glass-panel rounded-2xl p-5 flex flex-col col-span-1">
    <div class="flex items-center justify-between mb-3">
        <h3 class="text-lg font-bold flex items-center gap-2">
            <span class="material-symbols-outlined text-green-500 text-[20px]">check_circle</span>
            Tasks
        </h3>
        <span class="text-xl">✅</span>
    </div>
    <div class="flex-1 flex flex-col">
        <div class="relative mb-3">
            <input class="w-full bg-slate-50 dark:bg-[#234839]/30 border-0 rounded-lg px-3 py-2 pr-8 text-xs focus:ring-1 focus:ring-primary dark:text-white dark:placeholder:text-slate-500" placeholder="Add task..." type="text" />
            <button class="absolute right-1 top-1/2 -translate-y-1/2 p-1 rounded-md bg-primary text-slate-900 hover:bg-emerald-400 transition-colors">
                <span class="material-symbols-outlined text-[16px] block">add</span>
            </button>
        </div>
        <div class="space-y-2 overflow-y-auto max-h-[160px] pr-1 no-scrollbar">
            <label class="flex items-center gap-2 p-2 rounded-lg bg-slate-50 dark:bg-[#234839]/30 hover:bg-slate-100 dark:hover:bg-[#234839]/50 transition-colors cursor-pointer group">
                <input class="custom-checkbox w-4 h-4 rounded border-slate-300 dark:border-slate-600 text-primary focus:ring-0 cursor-pointer" type="checkbox" />
                <span class="text-xs font-medium text-slate-700 dark:text-slate-300 decoration-slate-500 group-has-[:checked]:line-through group-has-[:checked]:text-slate-500">Buy groceries</span>
            </label>
            <label class="flex items-center gap-2 p-2 rounded-lg bg-slate-50 dark:bg-[#234839]/30 hover:bg-slate-100 dark:hover:bg-[#234839]/50 transition-colors cursor-pointer group">
                <input checked="" class="custom-checkbox w-4 h-4 rounded border-slate-300 dark:border-slate-600 text-primary focus:ring-0 cursor-pointer" type="checkbox" />
                <span class="text-xs font-medium text-slate-700 dark:text-slate-300 decoration-slate-500 group-has-[:checked]:line-through group-has-[:checked]:text-slate-500">Pay bills</span>
            </label>
            <label class="flex items-center gap-2 p-2 rounded-lg bg-slate-50 dark:bg-[#234839]/30 hover:bg-slate-100 dark:hover:bg-[#234839]/50 transition-colors cursor-pointer group">
                <input class="custom-checkbox w-4 h-4 rounded border-slate-300 dark:border-slate-600 text-primary focus:ring-0 cursor-pointer" type="checkbox" />
                <span class="text-xs font-medium text-slate-700 dark:text-slate-300 decoration-slate-500 group-has-[:checked]:line-through group-has-[:checked]:text-slate-500">Call Mom</span>
            </label>
        </div>
    </div>
</div>